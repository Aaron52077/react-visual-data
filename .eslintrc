{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "func-names": [2, "never"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "arrow-parens": 0,
    "prettier/prettier": "error",
    // 关闭react默认的props-type验证
    "react/prop-types": [0],
    //关闭使用解构赋值的检测
    "react/destructuring-assignment": [0, "always"]
  }
}
